<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="date"
            type="design.ivan.app.weatherrss.Model.ForecastDate"/>
    </data>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/GridlayoutStyle"
        tools:background="@android:color/black"
        app:columnCount="2">
        <TextView
            android:id="@+id/main_list_item_title"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="Day"/>
        <TextView
            android:id="@+id/main_list_item_max_temp"
            android:layout_width="0dp"
            android:maxHeight="@dimen/list_item_first_high"
            android:maxWidth="@dimen/list_item_first_high"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_item_text_high"
            android:text="@{date.tempMaxFormatted}"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="30ºC" />
        <TextView
            android:id="@+id/main_list_item_max_wind"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_item_text_high"
            android:text="@{date.windMax}"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="4kn"/>

        <TextView
            android:id="@+id/main_list_item_min_temp"
            android:layout_width="0dp"
            android:maxHeight="@dimen/list_item_first_low"
            android:maxWidth="@dimen/list_item_first_low"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_item_text_low"
            android:text="@{date.tempMinFormatted}"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="10ºC"/>
        <TextView
            android:id="@+id/main_list_item_min_wind"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/list_item_text_low"
            android:text="@{date.windMin}"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="1kn"/>
        <android.support.v4.widget.Space
            android:layout_height="15dp"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"/>
        <TextView
            android:id="@+id/main_list_item_temp_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@{date.tempPhrase}"
            app:layout_columnSpan="2"
            app:layout_rowWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="As warm as twelve degrees and as cold as three degrees "/>
        <android.support.v4.widget.Space
            android:layout_height="15dp"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"/>
        <TextView
            android:id="@+id/main_list_item_weather_description"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@{date.description}"
            app:layout_columnSpan="2"
            app:layout_rowWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="Some really long description about the weather that we have here and some more text to fill in "/>
    </android.support.v7.widget.GridLayout>
</layout>